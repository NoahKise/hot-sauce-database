@using HotSauce.ViewModels

@model LoginViewModel
<div class="list">
    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary("Please fix the following error(s) and resubmit the form:")
    }

    @using (Html.BeginForm())
    {
        @Html.TextBoxFor(m => m.Email)
        <p>Email</p>

        @Html.PasswordFor(m => m.Password)
        <p>Password</p>
        <button type="submit">Log in</button>
        <hr />
    }
    <p>@Html.ActionLink("Register for an account", "Register")</p>
    <p>@Html.ActionLink("Back to accounts page", "Index")</p>
</div>